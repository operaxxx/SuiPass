# Production Environment Configuration
# Used for production deployment

# Load base configuration
NODE_ENV=production

# Network Configuration
VITE_SUI_NETWORK=mainnet
VITE_SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
# Package ID will be injected during deployment
# VITE_SUI_PACKAGE_ID=

# Walrus Configuration
VITE_WALRUS_RPC_URL=https://walrus.mainnet.rpc
VITE_WALRUS_SITE_URL=https://walrus.site
VITE_ENABLE_LOCAL_MODE=false

# Production-specific settings
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=true

# Security hardening for production
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_SESSION_TIMEOUT=1800000  # 30 minutes
VITE_AUTO_LOCK_TIMEOUT=900000 # 15 minutes